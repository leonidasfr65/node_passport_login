<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <div class="brand-logo">
        <img src="../assets/images/logo.svg">
      </div>
      <h3 class="text-center mb-3">Enregistrez-vous</h3>
      <% include ./partials/messages %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Prénom</label>
          <input type="name" id="name" name="name" class="form-control" placeholder="Entrez votre prénom"
            value="<%= typeof name != 'undefined' ? name : '' %>" />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Entrez votre email"
            value="<%= typeof email != 'undefined' ? email : '' %>" />
        </div>
        <div class="form-group">
          <label for="password">Mot de passe</label>
          <input type="password" id="password" name="password" class="form-control"
            placeholder="Créer votre mot de passe" value="<%= typeof password != 'undefined' ? password : '' %>" />
        </div>
        <div class="form-group">
          <label for="password2">Confirmer votre mot de passe</label>
          <input type="password" id="password2" name="password2" class="form-control"
            placeholder="Confirmez votre mot de passe"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Enregistrez-vous
        </button>
      </form>
      <p class="lead mt-4">Vous avez déjà un compte? <a href="/users/login">Connectez-vous</a></p>
    </div>
  </div>
</div>